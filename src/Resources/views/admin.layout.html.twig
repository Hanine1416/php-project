<body class="">
<div class="inner-wrap home">
    <header role="banner" class="sticky clearfix">
        <a class="elsevier-wordmark els_link-image" href="{{ url('admin') }}" title="Link to the homepage">
            <img width="140" src="//cdn.elsevier.io/verona/includes/svg/wordmark-elsevier.svg" alt="Elsevier Wordmark">
        </a>
        {% if admin is defined %}
            <div class="adminMenu">
                <ul class="clearfix">
                    <li><p>{{ 'admin.layout.hello'|trans }} {{ admin.username }}</p></li>
                    <li class="li-btn"><a class="btn" href="{{ url('admin-what-new') }}">What's New</a></li>
                    {% if (session.get('lang') not in ['in','us']) %}<li class="li-btn"><a class="btn" href="{{ url('admin-banner') }}">Marketing Banner</a></li>{% endif %}
                    <li class="li-btn"><a class="btn" href="{{ url('admin-faq') }}">{{ 'admin.layout.faq_page'|trans }}</a></li>
                    <li class="li-btn"><a class="btn" href="{{ url('admin') }}">{{ 'admin.layout.dashboard'|trans }}</a></li>
                    <li class="li-btn"><a class="btn c-inherit" href="{{  url('admin-logout') }}">{{ 'user.profile.sign_out_btn'|trans }}</a></li>
                    <li class="menuItem langSwitcher">
                        <select name="langSwitcher" class="langSwitcher grey" id="langSwitcher">
                            {% for  langKey,langName in site_languages %}
                                <option {% if ( langKey == session.get('lang') =="anz" and session.get('region')=="1") or (langKey == session.get('lang') and session.get('region')!= "1") %} selected {% endif %}
                                        value="{{ url('admin',{'reg':site_languages_regions[langKey]|first,'lang':langKey=='anz'?'en':langKey} ) }}" data-lang="{{ langKey }}" data-region="{{ site_languages_regions[langKey]|first }}">{{ langName }}
                                </option>
                            {% endfor %}
                        </select>
                    </li>
                </ul>
            </div>
        {% endif %}
    </header>
</div>
