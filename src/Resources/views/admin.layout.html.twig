<script>
    /** Show box with error message */
    function showErrorBox(message) {
        var box = $('.box');
        var errorContainer = box.find('.error-msg');
        errorContainer.html(message);
        box.attr('class', 'box active error-info');
        box.on('click', '#box-ok', function () {
            box.removeClass('active error-info');
            errorContainer.text("");
            box.off('click');
        });
    }
    $('.menuItem #langSwitcher').on('change', function (e) {
        e.preventDefault();
        let selectedCatalog = $(this). children("option:selected");
        let lang = selectedCatalog.data('lang');
        let region = selectedCatalog.data('region');
        if(region != undefined && lang != undefined) {
            Cookies.set('admin_region', region);
            Cookies.set('admin_lang', lang);
            location.reload();
        }
    })
</script>
