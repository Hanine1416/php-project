{% extends 'mail/base.html.twig' %}

{% block body %}
    <div>
        {{  userName }},<br>
        <p style="font-family: Arial, Helvetica, sans-serif;color:#404040;line-height: 1.59;font-size:17px;">{{ 'email.access'|trans|raw }}
            <br>
            {{ 'email.when'|trans|raw }}<strong>{{ date }}</strong><br>
            {{ 'email.device'|trans|raw }}<strong>{{ device }}</strong><br>
            {{ 'email.country'|trans|raw }}<strong>{{ country }} </strong><br>
        </p>
        <p style="font-family: Arial, Helvetica, sans-serif;color:#404040;line-height: 1.59;text-align: center;font-size:17px;background-color: #f5f5f5; padding: 24px; text-align: center"> {{ 'email.msg_code'|trans|raw }} <span style="display: block; margin-top: 8px; font-size: 24px;"><strong> {{ code }} </strong></span> </p>
    </div>
{% endblock body %}
