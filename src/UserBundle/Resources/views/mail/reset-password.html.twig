{% extends 'mail/base.html.twig' %}

{% block body %}
    <div>{{ body|replace({'__site__': url('main') })|raw }} </div>
    <br/>
    <table width="555" cellpadding="0" cellspacing="0" class="devicewidth2" align="center">

        <tbody><tr>
            <td style="color: #ffffff;font-family: Arial, Helvetica, sans-serif;font-size: 17px;padding: 0px 10px 0px 0px;">
                <table width="240" height="40" align="left" cellpadding="0" cellspacing="0" class="botonancho" style="margin:0 auto;">
                    <tbody><tr>
                        <td style="font-family: Arial, Helvetica, sans-serif;color:#ffffff;line-height: 24px;text-align: center;font-size:18px;background-color: #007398;" height="40" class="botonancho">
                            <a target="_blank" style="background-color: #007398;color:#ffffff;display:block; text-decoration:none"
                               href="{{ url('reset',{'token':request.token }) }}">
                                {% if button is defined %} {{ button }} {% else %}{{ 'user.reset_password.email.found.botton'|trans }} {% endif %}></a>
                        </td>
                    </tr>
                    </tbody></table>
            </td>
        </tr>

        </tbody></table>
    <br/>
{% endblock body %}