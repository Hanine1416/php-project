{% extends 'layout.html.twig' %}
{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('assets/page/user-interests/interests-page.css') }}">
{% endblock %}
{% block body %}
    <input type="hidden" id="page-title" value="registration: completed">
    {% if not tokenExpired or newUser == false %}
        <div class="user-interests-page interests-page-container {% if newUser %} new-user{% endif %}" data-update-user="{{ url('update-user-interests') }}">
            <div class="thank-you-msg nexusSans ">
                {% if newUser %}
                    {{ 'user_interests.wlc_msg'|trans }}
                {% else %}
                    {{ 'user_interests.wlc_ic_updated'|trans }}
                {% endif %}
            </div>
            <div class="welcome-msg">
                {{ 'user_interests.wlc_ic'|trans }}
                <p class="welcome-info">
                    {% if newUser %}
                        {{ 'user_interests.select_catg_msg'|trans }}
                    {% else %}
                        {{ 'user_interests.select_catg_msg_old_user'|trans }}
                    {% endif %}
                </p>
            </div>
            {% if  categoriesByType['SH']|length > 0 %}
            <div class="categories_block">
                <div class="category-name">
                    {{ 'layout.health_sciences'|trans }}
                </div>
                <div class="sub_cat_tags">
                    {% for key,item in categories %}
                        {%  if 'PROMISH' in key %}
                            <input type="checkbox" name="choice" id="{{ key }}" value="{{ key }}"/><label for="{{ key }}">{{ item.category }}</label>
                        {% endif %}
                    {% endfor %}
                </div>
            </div>
            {% endif %}
            {% if categoriesByType['ST']|length > 0 %}
            <div class="categories_block">
                <div class="category-name">
                    Science and Technology
                </div>
                <div class="sub_cat_tags">
                    {% for key,item in categories %}
                        {%  if 'PROMISH' not in key %}
                        <input type="checkbox" name="choice" id="{{ key }}" value="{{ key }}"/><label for="{{ key }}">{{ item.category }}</label>
                        {% endif %}
                    {% endfor %}
                </div>
            </div>
            {% endif %}
            <div class="" id="get-started">
                <button type="submit" class="btn btn-transparent right btn-browse submitBtn" id="started-btn">
                    {% if newUser %}
                        {{ 'user_interests.started_btn'|trans }}
                    {% else %}
                        {{ 'user_interests.started_btn_ic'|trans }}
                    {% endif %}
                </button>
            </div>
        </div>
    {% else %}
        <div class="text-center maincontainer msg-expired-container">{{ "user.register.token_expired.message"|trans|replace({'__link__':url('register')})|raw }}</div>
    {% endif %}
{% endblock %}
